<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutFirstNameProfilePageManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fnameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="16dp"
            android:drawablePadding="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonFirstNameManagerPage"
            style="@style/CustomButtonStyle4"
            android:onClick="onEditMode"
            android:layout_width="27dp"
            android:layout_height="37dp"
            android:drawableStart="@drawable/baseline_edit_24"
            android:textAllCaps="false"
            android:paddingLeft="5dp">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <EditText
        android:id="@+id/customerFName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="text"
        style="@style/CustomEditText"
        android:text="Anakin"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@id/linearLayoutFirstNameProfilePageManager"/>

    <LinearLayout
        android:id="@+id/linearLayoutLastNameProfilePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customerFName"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/lnameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="16dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLastNameManagerPage"
            style="@style/CustomButtonStyle4"
            android:onClick="onEditMode"
            android:layout_width="27dp"
            android:layout_height="37dp"
            android:drawableStart="@drawable/baseline_edit_24"
            android:textAllCaps="false"
            android:paddingLeft="5dp">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <EditText
        android:id="@+id/customerLName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="text"
        style="@style/CustomEditText"
        android:text="Skywalker"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@id/linearLayoutLastNameProfilePage"/>

    <LinearLayout
        android:id="@+id/linearLayoutPhoneProfilePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customerLName"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phoneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/customerLName"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPhoneManagerPage"
            style="@style/CustomButtonStyle4"
            android:onClick="onEditMode"
            android:layout_width="27dp"
            android:layout_height="37dp"
            android:drawableStart="@drawable/baseline_edit_24"
            android:textAllCaps="false"
            android:paddingLeft="5dp">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <EditText
        android:id="@+id/customerPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="text"
        style="@style/CustomEditText"
        android:text="+1 514-1234567"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@id/linearLayoutPhoneProfilePage"/>

    <LinearLayout
        android:id="@+id/linearLayoutEmailProfilePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customerPhone"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16dp"
            android:layout_below="@id/customerPhone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonEmailManagerPage"
            style="@style/CustomButtonStyle4"
            android:onClick="onEditMode"
            android:layout_width="27dp"
            android:layout_height="37dp"
            android:drawableStart="@drawable/baseline_edit_24"
            android:textAllCaps="false"
            android:paddingLeft="5dp">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <EditText
        android:id="@+id/customerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="text"
        style="@style/CustomEditText"
        android:text="anakin.skywalker@mail.com"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@id/linearLayoutEmailProfilePage"
        />



    <!-- CLIENT ID -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/cidTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client ID"
            android:textSize="16dp"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/customerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BBC0001"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_below="@id/cidTitle"
            android:textColor="@color/darkerYellow"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSaveChangesDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomButtonStyle3"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:text="Save Changes"
            android:layout_below="@+id/customerId"
            > </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>


    <!-- CLIENT ID -->


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/customerEmail"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="19dp"
        android:background="@color/black" />

</RelativeLayout>